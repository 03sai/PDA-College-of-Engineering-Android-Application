<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F363F"
    android:layout_gravity="center_vertical"
    tools:context=".About">

    <ImageView
        android:id="@+id/about_pdalogo"
        android:layout_width="303dp"
        android:layout_height="195dp"
        android:src="@drawable/buz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/about_txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PDA College of Engineering Application"
        android:textSize="22dp"
        android:textColor="@color/cardview_light_background"
        android:layout_below="@id/about_pdalogo"
        android:gravity="center"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/about_txt2"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed By:"
        android:textSize="22dp"
        android:textColor="@color/cardview_light_background"
        android:layout_below="@id/about_txt1"
        android:gravity="center"/>

    <TextView
        android:id="@+id/about_txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rahul Sidhapurker"
        android:textSize="22dp"
        android:textColor="@color/cardview_light_background"
        android:layout_below="@id/about_txt2"
        android:gravity="center"/>
    <TextView
        android:id="@+id/about_txt4"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sai Chandra"
        android:textSize="22dp"
        android:textColor="@color/cardview_light_background"
        android:layout_below="@id/about_txt3"
        android:gravity="center"/>
    <TextView
        android:layout_marginTop="20sp"
        android:id="@+id/about_txt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guide:"
        android:textSize="22dp"
        android:textColor="@color/cardview_light_background"
        android:layout_below="@id/about_txt4"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/about_txt6"
        android:layout_below="@id/about_txt5"
        android:text="Dr. Suvarna Nandyal"
        android:textSize="22dp"
        android:textColor="@color/cardview_light_background"
        android:gravity="center"/>





</RelativeLayout>