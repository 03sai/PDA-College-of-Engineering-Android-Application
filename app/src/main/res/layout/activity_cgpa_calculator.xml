<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <EditText
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="grade of Subject 1"
        android:maxLength="3" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et1"
        android:hint="Credit of subject 1"
        android:maxLength="3" />

    <EditText
        android:id="@+id/et3"
        android:layout_below="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="grade of Subject 2"
        android:maxLength="3" />

    <EditText
        android:id="@+id/et4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et3"
        android:layout_below="@+id/et2"
        android:hint="Credit of subject 2"
        android:maxLength="3" />
    <EditText
        android:id="@+id/et5"
        android:layout_below="@+id/et3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="grade of subject 3"
        android:maxLength="3" />

    <EditText
        android:id="@+id/et6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et5"
        android:layout_below="@+id/et4"
        android:hint="Credit of subject 3"
        android:maxLength="3" />
    <EditText
        android:id="@+id/et7"
        android:layout_below="@+id/et5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="grade of subject 4"
        android:maxLength="3" />

    <EditText
        android:id="@+id/et8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et7"
        android:layout_below="@+id/et6"
        android:hint="Credit of subject 4"
        android:maxLength="3" />
    <EditText
        android:id="@+id/et9"
        android:layout_below="@+id/et7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="grade of subject 5"
        android:maxLength="3" />

    <EditText
        android:id="@+id/et10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et9"
        android:layout_below="@+id/et8"
        android:hint="Credit of subject 5"
        android:maxLength="3" />
    <EditText
        android:id="@+id/et11"
        android:layout_below="@+id/et9"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="grade of subject 6"
        android:maxLength="3" />

    <EditText
        android:id="@+id/et12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et11"
        android:layout_below="@+id/et10"
        android:hint="Credit of subject 6"
        android:maxLength="3" />
    <EditText
        android:id="@+id/et13"
        android:layout_below="@+id/et11"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="grade of subject 7"
        android:maxLength="3" />

    <EditText
        android:id="@+id/et14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et13"
        android:layout_below="@+id/et12"
        android:hint="Credit of subject 7"
        android:maxLength="3" />
    <EditText
        android:id="@+id/et15"
        android:layout_below="@+id/et13"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="grade of subject 8"
        android:maxLength="3" />

    <EditText
        android:id="@+id/et16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et15"
        android:layout_below="@+id/et14"
        android:hint="Credit of subject 8"
        android:maxLength="3" />
    <EditText
        android:id="@+id/et17"
        android:layout_below="@+id/et15"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="grade of subject 9"
        android:maxLength="3" />


    <EditText
        android:id="@+id/et18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/et17"
        android:layout_below="@+id/et16"
        android:hint="Credit of subject 9"
        android:maxLength="3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et19"
        android:layout_below="@+id/et18"
        android:hint="grade of subject 10"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et20"
        android:layout_toRightOf="@+id/et19"
        android:layout_below="@+id/et18"
        android:hint="credit of subject 10"/>

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et19"
        android:onClick="cgpa"
        android:text="SCGPA" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/bt2"
        android:layout_toRightOf="@+id/bt1"
        android:layout_below="@+id/et20"/>

    <TextView
        android:id="@+id/tv"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/bt1"/>
</RelativeLayout>



</ScrollView>











